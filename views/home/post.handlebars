<div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">Start Bootstrap</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateDate date "MMMM Do YYYY"}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

          <hr>
          <p class="lead">{{post.body}}</p>
          <hr>

          

        </div>

        
          <!-- Sidebar Widgets Column -->
          {{> home/sidebar}}

   

      </div>
      <!-- /.row -->